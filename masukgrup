    <form onsubmit="return validasi()">
        <input type="text" id="nama" placeholder="Nama" required>
        <input type="text" id="nomor" placeholder="Nomor" required>
        <input type="number" id="umur" placeholder="umur" required>
        <input type="number" id="kelas" placeholder="Kelas" required>
        <input type="text" id="yapping" placeholder="Bisa yapping?" required>
        <button type="submit">KIRIM</button>
    </form>

    <div id="hasil"></div>
</div>

<script>
function validasi() {
    let umur = parseInt(document.getElementById("umur").value);
    let kelas = parseInt(document.getElementById("kelas").value);
    let yapping = document.getElementById("yapping").value.toUpperCase();
    let hasil = document.getElementById("hasil");

    if (umur < 14) {
        alert("Umur minimal 14 tahun!");
        return false;
    }

    if (kelas < 8) {
        alert("Kelas minimal 8!");
        return false;
    }

    if (yapping !== "BISA") {
        alert("Jawaban harus BISA!");
        return false;
    }

    hasil.innerHTML = `
        <b>KAMU LOLOS DAN AKAN DI MASUKAN KE GRUP</b><br>
        <a href="https://chat.whatsapp.com/Kiy72yqS25R90rC7elsjDv" target="_blank">
            MASUK GRUP WHATSAPP
        </a>
    `;

    return false;
}
</script>

